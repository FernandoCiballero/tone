<body class="index if action_name == 'index'">

<div class="container">
  <div class="container-index-detail">
    <h1><strong><h1>Instruments nearby</h1></strong></h1>
  </div>
  
  <div class="row">
      <% @instruments.each do |instrument| %>
      <div class="card-product" style="width: 24rem;">
        <img class="card-img-top" src="https://images.pexels.com/photos/2049414/pexels-photo-2049414.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" />
        <div class="card-body">
          <h2 class="card-title"><%= instrument.category %></h2>
          <p class="card-text"><%= instrument.description %></p>
        </div>
      </div>
      <% end %>
  </div>
</div>
