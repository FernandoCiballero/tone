
<div class="container" id="instrument">

  <div class="sub-container-show" id="title-infos">

    <div class="container-title">
      <h1><%= @instrument.title %></h1>
    </div>
    <div class="container-address-price">
        <p><%= @instrument.pickup_address %></p>
        <p id="price"><%= @instrument.price_per_day %> CH</p>
    </div>


  </div>

  <div class="sub-container-show">

    <div class="container-img">
      <% if @instrument.photo.attached? %>
        <%= cl_image_tag @instrument.photo.key, width: 300, crop: :fill %>
      <% else %>
        <%= image_tag 'https://images.unsplash.com/photo-1466232373731-46205f0b668e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80' %>
      <% end %>
    </div>
    <div class="container-date-description">
      <div class="container-instrument-description">
        <h2>Description</h2>
        <h3><%= @instrument.description %></h3>
      </div>
      <div class="container-booking-pickr">
        <%= render 'shared/booking_form', instrument: @instrument %>

      </div>
    </div>

  </div>

  <div class="sub-container-show" id="map-review">

    <div class="container-map" id="map"
              style="width: 50%; height: 600px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <div class="container-review">
      <h1>Reviews</h1>
      <div class="notification">
          <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
          <div class="notification-content">
            <p><small>14th January</small></p>
            <p>Sick product <strong>duuuuuude</strong></p>
          </div>

        <!-- <div class="notification-actions">
          <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
          <a href="#">Delete <i class="far fa-trash-alt"></i></a>
        </div> -->
      </div>

      <div class="notification">
        <img src='https://kitt.lewagon.com/placeholder/users/Eschults' class="avatar-large"/>
        <div class="notification-content">
        <p><small>9th January</small></p>
        <p><strong>Mamene</strong></p>
      </div>

  <!-- <div class="notification-actions">
    <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
    <a href="#">Delete <i class="far fa-trash-alt"></i></a>
  </div> -->
      </div>
    </div>

  </div>

</div>

