<div class="container d-flex justify-content-center">
  <div class="login-card row w-50 p-4">
    <div class="col-md-6 mx-auto">
      <h2>Edit <%= link_to "Back to Dashboard", dashboard_path, class:"btn btn-success btn-sm col" %></h2>
        <%= simple_form_for  @booking  do |f| %>
      <div class="form-group">
        <div class="form-group">
          <%= f.input :status, as: :select, collection: Booking::status %>
        <div class="mt-5">
          <%= f.submit "Accept/Decline", class:"btn btn-success btn-sm col" %>
        </div>

        <% end %>
    </div>
  </div>
</div>
