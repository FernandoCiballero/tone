<div class="container d-flex justify-content-center">
  <div class="login-card row w-50 p-4">
    <div class="col-md-6 mx-auto">
      <h2>Leave a review</h2>
        <%= simple_form_for [@booking, @review] do |f| %>
      <div class="form-group">
        <div class="mt-5">
          <div class="form-group">
            <%= f.input :comment%>
          </div>
          <div class="form-group">
            <%= f.input :rating %>
          </div>
        </div>
        <div class="mt-5">
          <%= f.submit "Submit your review", class:"btn btn-success btn-sm col" %>
        </div>
          <% end %>
    </div>
  </div>
</div>
